{
    "compilerOptions": {
        "target": "ES6",                          // or higher (needed for decorators to work)
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,           // This is crucial for enabling decorators
        "emitDecoratorMetadata": true,            // Enables emitting metadata, required for TypeORM
        "outDir": "./dist",                       // Where compiled files go
        "baseUrl": "./src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
  }
