{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "lib": ["ES2020"],
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
  }
